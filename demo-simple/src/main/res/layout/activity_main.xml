<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context="com.novoda.downloadmanager.demo.MainActivity">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/database_cloning_updates"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="Tap to begin cloning" />

    <Spinner
      android:id="@+id/database_download_file_size"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />

    <Button
      android:id="@+id/button_create_v1_db"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Create V1 DB" />

  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/database_migration_updates"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="Tap to begin migration" />

    <Button
      android:id="@+id/button_migrate"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Migrate" />

    <Button
      android:id="@+id/button_abort_migration"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Abort" />

  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/batch_1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:lines="7"
      android:text="Hello World!" />

    <Button
      android:id="@+id/button_pause_downloading_1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Pause" />

    <Button
      android:id="@+id/button_resume_downloading_1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Resume" />

  </LinearLayout>


  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/batch_2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:lines="7"
      android:text="Hello World!" />

    <Button
      android:id="@+id/button_pause_downloading_2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Pause" />

    <Button
      android:id="@+id/button_resume_downloading_2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Resume" />

  </LinearLayout>

  <Button
    android:id="@+id/button_start_downloading"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Start downloading" />

  <Button
    android:id="@+id/button_delete_all"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Delete all" />

  <Button
    android:id="@+id/button_show_completed_downloads"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Show Completed Downloads" />

  <TextView
    android:id="@+id/textview_completed_download_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="TextView"
    android:textColor="@android:color/black"
    android:textSize="16sp" />

</LinearLayout>
