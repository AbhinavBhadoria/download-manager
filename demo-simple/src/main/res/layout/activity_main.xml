<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="com.novoda.downloadmanager.demo.MainActivity"
  tools:layout_editor_absoluteY="81dp">

  <TextView
    android:id="@+id/database_cloning_updates"
    android:layout_width="149dp"
    android:layout_height="18dp"
    android:layout_marginLeft="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="16dp"
    android:layout_weight="1"
    android:text="@string/tap_to_begin_cloning"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <Spinner
    android:id="@+id/database_download_file_size"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="16dp"
    app:layout_constraintEnd_toStartOf="@+id/button_create_v1_db"
    app:layout_constraintStart_toEndOf="@+id/database_cloning_updates"
    app:layout_constraintTop_toTopOf="parent" />

  <Button
    android:id="@+id/button_create_v1_db"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    android:text="@string/create_v1_db"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <TextView
    android:id="@+id/database_migration_updates"
    android:layout_width="272dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_weight="1"
    android:text="@string/tap_to_begin_migration"
    app:layout_constraintEnd_toStartOf="@+id/button_migrate"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/button_migrate" />

  <Button
    android:id="@+id/button_migrate"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    android:text="@string/migrate"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/button_create_v1_db" />

  <TextView
    android:id="@+id/batch_1"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginStart="8dp"
    android:lines="6"
    android:text="@string/batch_status_one"
    app:layout_constraintBaseline_toBaselineOf="@+id/button_pause_downloading_1"
    app:layout_constraintEnd_toStartOf="@+id/button_pause_downloading_1"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/button_pause_downloading_1"
    tools:text="@string/example_batch_status" />

  <Button
    android:id="@+id/button_pause_downloading_1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    android:text="@string/pause"
    app:layout_constraintEnd_toStartOf="@+id/button_resume_downloading_1"
    app:layout_constraintTop_toBottomOf="@+id/button_migrate" />

  <Button
    android:id="@+id/button_resume_downloading_1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    android:text="@string/resume"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/button_migrate" />

  <TextView
    android:id="@+id/batch_2"
    android:layout_width="176dp"
    android:layout_height="72dp"
    android:layout_marginBottom="24dp"
    android:layout_marginEnd="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:lines="6"
    android:text="@string/batch_status_two"
    app:layout_constraintBaseline_toBaselineOf="@+id/button_pause_downloading_2"
    app:layout_constraintBottom_toTopOf="@+id/check_wifi_only"
    app:layout_constraintEnd_toStartOf="@+id/button_pause_downloading_2"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/batch_1"
    tools:text="@string/example_batch_status" />

  <Button
    android:id="@+id/button_pause_downloading_2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:text="@string/pause"
    app:layout_constraintTop_toBottomOf="@+id/batch_1"
    tools:layout_editor_absoluteX="192dp" />

  <Button
    android:id="@+id/button_resume_downloading_2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginStart="8dp"
    android:text="@string/resume"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@+id/button_pause_downloading_2"
    app:layout_constraintTop_toTopOf="@+id/button_pause_downloading_2" />

  <CheckBox
    android:id="@+id/check_wifi_only"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:checked="false"
    android:text="@string/download_only_over_wifi"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/batch_2" />

  <Button
    android:id="@+id/button_log_file_directory"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginStart="8dp"
    android:text="@string/log_file_directory"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.529"
    app:layout_constraintStart_toEndOf="@+id/check_wifi_only"
    app:layout_constraintTop_toTopOf="@+id/check_wifi_only"
    tools:ignore="ButtonStyle" />

  <Button
    android:id="@+id/button_start_downloading"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="90dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="90dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:text="@string/start_downloading"
    app:layout_constraintEnd_toStartOf="@+id/button_delete_all"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/button_log_file_directory" />

  <Button
    android:id="@+id/button_delete_all"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginRight="8dp"
    android:text="@string/delete_all"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="@+id/button_start_downloading" />

</android.support.constraint.ConstraintLayout>
